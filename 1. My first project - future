cls()

engine.say("ПРОСЧЕТ БУДУЩЕГО ОКОНЧЕН")
engine.runAndWait()
print('ПРОСЧЕТ БУДУЩЕГО ОКОНЧЕН')
time.sleep(4) #задержка 4 секунда
cls()

print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
cls()
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
print(name,'с возрастом',years,'лет')
time.sleep(0.05)
cls()
print(name,'с возрастом',years,'лет')
time.sleep(2) #задержка 2 секунда
cls()
engine.say("У ТЕБЯ ВСЕ БУДЕТ БАЛДЕЖНО И СУПЕР ХОРОШО!")
engine.runAndWait()
print('У ТЕБЯ ВСЕ БУДЕТ БАЛДЕЖНО И СУПЕР ХОРОШО!')
