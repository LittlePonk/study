#Подключение модуля
import time #время
import os  #ОперационнаяСистема
import pyttsx3 #озвучка

cls = lambda: os.system('cls') #установка очистки на cls
cls() #очистка
engine = pyttsx3.init() # инициализация движка озвучки
engine.setProperty('rate', 150)     # скорость речи
engine.setProperty('volume', 0.9)   # громкость (0-1)

engine.say("Это волшебный предсказатель!")  # запись фразы в очередь
# очистка очереди и воспроизведение текста
engine.runAndWait()

engine.say("Введите сколько вам лет")
engine.runAndWait()
years = int(input()) #Запрос ввода с числом
engine.say("Введите как вас зовут")
engine.runAndWait()
name = input()

time.sleep(1) #задержка 1 секунда
engine.say("Начинаем просчитывать ваше будущее")
engine.runAndWait()

time.sleep(1) #задержка 1 секунда
cls()
print('__________ 0%')
time.sleep(1) #задержка 1 секунда
cls()
print('#_________ 10%')
time.sleep(1) #задержка 1 секунда
cls()
print('##________ 20%')
time.sleep(1) #задержка 1 секунда
cls()
